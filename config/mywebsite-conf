server {
	listen 80;
	listen [::]:80;
	
	server_name mywebsite;
	return 301 https://$server_name$request_uri;
}
server{

	listen 443 ssl ;
	listen [::]:443 ssl ;
	
	server_name mywebsite;
	
	ssl_certificate /etc/nginx/ssl/certs/mywebsite.pem;
	ssl_certificate_key /etc/nginx/ssl/private/mywebsite.key;

	root /var/www/mywebsite;
	index index.html index.htm index.nginx-debian.html;

}
